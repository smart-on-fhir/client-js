{
    "compilerOptions": {

        // We want strict validation
        "strict"       : true,
        "noImplicitAny": true,
        "alwaysStrict" : true,
        "module"       : "CommonJS",
        "target"       : "es2024",
        "importHelpers": true,
        "esModuleInterop": true,
        "noEmitHelpers": true,
        "types"        : ["mocha"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
}