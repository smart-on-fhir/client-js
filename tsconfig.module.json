{
    "compilerOptions": {
        "sourceMap"       : false,
        "noImplicitAny"   : true,
        "module"          : "CommonJS",
        "target"          : "ES2017",
        "importHelpers"   : false,
        "outDir"          : "dist/lib",
        "listEmittedFiles": false,
        "declaration"     : true,
        "declarationDir"  : "dist/lib/types",
        "typeRoots"       : ["dist/lib", "dist/lib/types"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
}