{
  "name": "fhirclient",
  "version": "3.0.0-beta.1",
  "description": "JavaScript client for Fast Healthcare Interoperability Resources",
  "author": "SMART Health IT <support@smarthealthit.org> (https://smarthealthit.org/)",
  "contributors": [
    "Josh Mandel <joshua.mandel@childrens.harvard.edu>",
    "Vladimir Ignatov <vlad.ignatov@gmail.com>",
    "Dylan Phelan <dtphelan1@gmail.com>"
  ],
  "keywords": [
    "SMART",
    "FHIR",
    "Client"
  ],
  "license": "Apache-2.0",
  "main": "dist/lib/entry/node.js",
  "browser": "dist/lib/entry/browser.js",
  "scripts": {
    "clean": "npm-run-all --parallel clean:bundle clean:cjs clean:esm clean:types",
    "clean:bundle": "rm -rf dist/bundle",
    "clean:cjs": "rm -rf dist/cjs",
    "clean:esm": "rm -rf dist/esm",
    "clean:types": "rm -rf dist/types",
    "build:watch": "nodemon -i dist -i test -e ts,js,json -x 'npm run build'",
    "build": "npm-run-all --parallel build:cjs build:esm build:types build:bundle",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:bundle": "node esbuild.config.js",
    "test": "npm run coverage && npm run test:e2e",
    "test:watch": "npm-run-all --parallel test:integration:watch test:e2e:watch",
    "test:integration": "lab --typescript test/*.test.ts",
    "test:integration:watch": "nodemon -w test -w src -e ts,js,json -x 'npm run test:integration'",
    "test:e2e": "nightwatch --headless test/specs/*.js",
    "test:e2e:watch": "nodemon -w test/specs -w dist/bundle -e js,html -x 'npm run test:e2e'",
    "coverage": "nyc --cache false --reporter lcov --reporter html lab --typescript test/*.test.ts",
    "doc": "typedoc",
    "dev": "npm run clean && npm run build && npm run test && npm run doc"
  },
  "dependencies": {
    "@types/fhir": "^0.0.41",
    "debug": "^4.1.1",
    "jose": "^4.15.5",
    "js-base64": "^3.7.2"
  },
  "devDependencies": {
    "@hapi/code": "^9.0.3",
    "@hapi/lab": "^26.0.0",
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^5.0.3",
    "@types/hapi": "^18.0.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.10",
    "@types/nightwatch": "^2.3.0",
    "@types/node": "^24.5.2",
    "chai": "^6.0.1",
    "chai-as-promised": "^8.0.2",
    "chromedriver": "^140.0.3",
    "cors": "^2.8.5",
    "cross-fetch": "^4.1.0",
    "esbuild": "^0.25.10",
    "express": "^5.1.0",
    "jsdom": "^27.0.0",
    "jsonwebtoken": "^9.0.2",
    "nightwatch": "^3.11.1",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.0.0",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smart-on-fhir/client-js.git"
  },
  "bugs": {
    "url": "https://github.com/smart-on-fhir/client-js/issues"
  },
  "homepage": "http://docs.smarthealthit.org/client-js/",
  "types": "src/types.d.ts",
  "nyc": {
    "include": "src"
  }
}
